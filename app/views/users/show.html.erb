<h1 class="title"><%= @user.name %>'s Profile</h1>
<h3>Invitations:</h3>
<ul class = "list-nav">
  <% @user.invites.each do |invite| %>
    <li> <%= link_to Event.where(id: invite.event_id).first.name, event_path(invite.event_id)%> </li>
  <% end %>
</ul>

<h3>Past Events:</h3>
<% if past_events(@user.events).size > 0 %>
<ul class="list-nav">
  <% past_events(@user.events).each do |event| %>
    <li> <%= link_to Event.where(id: event.id).first.name, event_path(event.id)%> </li>
  <% end %>
</ul>
<% else %>
    <h4>No past events found!</h4>
<% end %>

<h3>Upcoming Events:</h3>
<% if upcoming_events(@user.events).size > 0 %>
<ul class="list-nav">
  <% upcoming_events(@user.events).each do |event| %>
    <li> <%= link_to Event.where(id: event.id).first.name, event_path(event.id)%> </li>
  <% end %>
</ul>
<% else %>
    <h4>No upcoming! events found!</h4>
<% end %>
